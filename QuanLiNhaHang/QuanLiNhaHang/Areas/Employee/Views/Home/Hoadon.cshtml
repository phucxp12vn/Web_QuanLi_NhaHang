@model QuanLiNhaHang.Models.HoadonModel
    
@{
    ViewBag.Title = "Hoadon";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutPage1.cshtml";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                @using (Html.BeginForm("TaoHoadon", "Home","Employee", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="section">Tạo hóa đơn</span>
                            <div class="item form-group">
                                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Mã hóa đơn:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.ValidationMessageFor(model => model.MaHoaDon, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(model => model.MaHoaDon, new {@id = "mahd" ,@class="form-control col-md-7 col-xs-12" ,@data_validate_length_range="6" ,@data_validate_words="2" ,@name="mahd", @type="text"})
                            
                        </div>
                    </div>
                    <div class="item form-group">
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                            Mã nhân viên:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            
                            @Html.TextBoxFor(model => model.MaNhanVien, new {@type = "text" ,@id = "mahd" ,@name = "manv" ,@class="form-control col-md-7 col-xs-12",@readonly=true })
                            
                        </div>
                    </div>
                    <div class="item form-group">
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                            Mã bàn:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.ValidationMessageFor(model => model.MaBan, "", new { @class = "text-danger" })
                         @Html.TextBoxFor(model => model.MaBan,new { @type = "text", @id = "maban", @name = "maban", @class = "form-control col-md-7 col-xs-12" }) 
                        
                        </div>
                    </div>
                    <div class="item form-group">
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="website">
                            Ngày lập:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           @Html.TextBoxFor(model => model.NgayLap, new { @type = "text", @id = "nl", @name = "nl", @class = "form-control col-md-7 col-xs-12" }) 
                        </div>
                    </div>
                    <div class="item form-group">
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="occupation">
                            Giờ vào:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           @Html.TextBoxFor(model=>model.GioVao,new { @type = "text", @id = "gv", @name = "gv", @class = "form-control col-md-7 col-xs-12" }) 
                        </div>
                    </div>
                    <div class="item form-group">
                        <label style="text-align:left" class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">
                            Giờ thanh toán:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model=>model.GioThanhToan, "{HH:mm:ss}",new { @type = "text", @id = "gl", @name = "gtt", @class = "form-control col-md-7 col-xs-12" }) 
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <button class="btn btn-primary" id = "send" type = "submit" style = "color: white;">Next</button>
                            @*Html.ActionLink("Next", "Chitiethoadon", "Nhanvien", null, new { @style = "color: white;", @class = "btn btn-primary", @id = "send", @type = "submit" })*@
                        </div>
                    </div>
                        }
                
            </div>
        </div>
    </div>
</div>

