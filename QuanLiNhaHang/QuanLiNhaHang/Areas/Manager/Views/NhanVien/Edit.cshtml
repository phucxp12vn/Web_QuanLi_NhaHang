@model Model.EF.NhanVien

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layouts.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Edit", "NhanVien", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <br />
                        <div id="demo-form2" class="form-horizontal form-label-left">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Ma-Nhan-Vien">
                                    Mã Nhân Viên<span class="required">*</span>
                                </label>

                                @*@Html.LabelFor(model => model.TenNV)*@

                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.MaNV, new { @class = "form-control col-md-7 col-xs-12", @readonly="readonly" })
                                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Ten-Nhan-Vien">
                                    Tên Nhân Viên <span class="required">*</span>
                                </label>

                                @*@Html.LabelFor(model => model.TenNV)*@

                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.TenNV, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.MaChucVu, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Ma-Chuc-Vu">
                                    Mã Chức Vụ <span class="required">*</span>
                                </label>


                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.MaChucVu, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(model => model.MaChucVu, "", new { @class = "text-danger" })
                                </div>

                            </div>



                       
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Địa Chỉ</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.Sdt, htmlAttributes: new { @class = "control-label col-md-2" })*@

                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Số Điện Thoại</label>

                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.Sdt, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <input type="submit" value="Cập nhật" class="btn btn-success" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
